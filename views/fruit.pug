extends layout

block content
  h1= title

    - var results=[{Name:"APPLE",Color:"GREEN",Calories:77},{Name:"STRAWBERRY",Color:"RED",Calories:33},{Name:"MANGO",Color:"YELLOW",Calories:63}]
  div(class="container-fluid")
  div(class="row")
   each s,index in results
    div(class="col-sm-2" onclick=`buy(${index})`) #{s.Name}, #{s.Color}, #{s.Calories}
    script.
        function buy(a)
        {
            alert(`You purchased Item ${a+1}`)
        }