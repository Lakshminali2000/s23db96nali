extends layout

block content
  h1= title
  a.btn.btn-primary.btn-sm(href='/fruit/create') Create New 
  
  - var items = results
  

  div(class="container-fluid")
    div(class="row")
      each s in items
        div(class="col-sm-2")
          | #{s.NAME}, #{s.COLOR}, #{s.CALORIES}
          - let destination = `/fruit/detail?id=${s._id}`
          - let destination1 = `/fruit/update?id=${s._id}`
          - let destination2  = `/fruit/delete?id=${s._id}`
          div(class="col-sm-2", onclick=`buy(${s})`)
            | #{s.NAME}, #{s.AGE}, #{s.COLOR}
            button.btn(class="btn-primary ml-1", onclick=`dispatch('${destination}')`) Update
            button.btn(class="btn-primary ml-1", onclick=`dispatch('${destination1}')`) detail 
            button.btn(class="btn-primary ml-1", onclick=`dispatch('${destination2}')`) delete

  script.
    function buy(a) {
      alert(`You purchased Item ${a.NAME}`);
    }

    function dispatch(path) {
      window.location.href = path;
    }
